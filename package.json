{
  "name": "ts-bf6-portal",
  "version": "1.0.2",
  "description": "TypeScript helpers and Portal runtime declarations for Battlefield 6 modding",
  "license": "Proprietary",
  "files": [
    "dist",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "globals.d.ts",
    "globals.js",
    "bin",
    "scripts/post-build.js",
    "battlefield_portal.proto"
  ],
  "types": "./dist/src/portal/index.d.ts",
  "keywords": [
    "battlefield",
    "bf6",
    "declarations",
    "portal",
    "sdk",
    "types",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/The-Sir-Community/ts-bf6-portal"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/src/portal/index.js",
  "module": "./dist/src/portal/index.js",
  "exports": {
    ".": {
      "types": "./dist/src/portal/index.d.ts",
      "import": "./dist/src/portal/index.js"
    },
    "./webplay": {
      "types": "./dist/src/webplay/index.d.ts",
      "import": "./dist/src/webplay/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "postbuild": "node ./scripts/post-build.js",
    "test": "npm run test:bundler && npm run test:webplay",
    "test:bundler": "tsx src/bundler/test-runner.ts",
    "test:webplay": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "example": "ts-node examples/example.ts",
    "load-config": "ts-node examples/load-experience-from-config.ts",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "homepage": "https://github.com/The-Sir-Community/ts-bf6-portal#readme",
  "bugs": {
    "url": "https://github.com/The-Sir-Community/ts-bf6-portal/issues"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/google-protobuf": "^3.15.12",
    "protobufjs": "^7.5.4",
    "ts-morph": "^27.0.0"
  },
  "bin": {
    "ts-portal-bundle": "./bin/ts-portal-bundle.mjs",
    "ts-portal-bundler": "./bin/ts-portal-bundle.mjs",
    "ts-bf6-deploy": "./bin/ts-bf6-deploy.mjs",
    "ts-bf6-list-mutators": "./bin/ts-bf6-list-mutators.mjs",
    "ts-bf6-validate-config": "./bin/ts-bf6-validate-config.mjs",
    "ts-bf6-strings": "./dist/src/bundler/strings-bundler.js"
  }
}
