{
  "name": "ts-bf6-portal",
  "version": "1.0.2",
  "description": "TypeScript helpers and Portal runtime declarations for Battlefield 6 modding",
  "license": "Proprietary",
  "files": [
    "dist",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "globals.d.ts",
    "globals.js",
    "bin",
    "scripts/post-build.js"
  ],
  "types": "./dist/index.d.ts",
  "keywords": [
    "battlefield",
    "bf6",
    "declarations",
    "portal",
    "sdk",
    "types",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/The-Sir-Community/ts-bf6-portal"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./globals": {
      "types": "./globals.d.ts",
      "import": "./globals.js",
      "default": "./globals.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "postbuild": "node ./scripts/post-build.js",
    "test": "tsx src/bundler/test-runner.ts",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "homepage": "https://github.com/The-Sir-Community/ts-bf6-portal#readme",
  "bugs": {
    "url": "https://github.com/The-Sir-Community/ts-bf6-portal/issues"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ts-morph": "^27.0.0",
    "santiago-playweb-client": "github:The-Sir-Community/ts-webplay-client"
  },
  "bin": {
    "ts-portal-bundle": "./bin/ts-portal-bundle.mjs",
    "ts-portal-bundler": "./bin/ts-portal-bundle.mjs",
    "ts-bf6-deploy": "./bin/ts-bf6-deploy.mjs",
    "ts-bf6-strings": "./dist/strings_bundler.js"
  }
}
