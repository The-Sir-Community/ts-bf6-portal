{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "files": [
    "index.ts",
    "index.d.ts",
    "strings_bundler.ts",
    "src/bundler/index.ts",
    "src/bundler/bundler.ts",
    "src/bundler/cli.ts",
    "src/bundler/test-runner.ts"
  ]
}
