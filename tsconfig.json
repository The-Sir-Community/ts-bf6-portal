{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "files": [
    "src/portal/index.ts",
    "src/bundler/strings-bundler.ts",
    "src/bundler/index.ts",
    "src/bundler/bundler.ts",
    "src/bundler/cli.ts",
    "src/bundler/test-runner.ts",
    "src/webplay/index.ts",
    "src/webplay/playweb-client.ts",
    "src/webplay/response-decoder.ts",
    "src/webplay/experience-loader.ts"
  ]
}
